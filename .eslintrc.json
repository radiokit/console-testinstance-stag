{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "babel"
  ],
  "rules": {
    "react/prefer-es6-class": [
      1,
      "never"
    ],
    "no-unused-expressions": [
      "error",
      {
        "allowShortCircuit": true,
        "allowTernary": true
      }
    ],
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": [
          "Map",
          "List",
          "OrderedMap",
          "OrderedSet",
          "Set",
          "Seq",
          "Moment"
        ]
      }
    ],
    "no-use-before-define": ["error", { "functions": false, "classes": true }]
  }
}
